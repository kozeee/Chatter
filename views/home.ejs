<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>
        <%=user.Username%>
    </title>

    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Main Style Css -->
    <base href="/">
    <link rel="stylesheet" href="bootstrap_vapor.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</head>

<body>
    <div id="container d-flex justify-content-center">

        <div id="error-banner" class="error-banner-hidden">
            <h1 id="error-message" style="text-align: center;"></h1>
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid just">
                    <a class="navbar-brand" href="#"></a>
                    <div class="navbar" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link" style="color:white;">Home</a>
                            <a class="nav-link" style="color:white;" href="/users/sign_out">Logout</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="card d-flex justify-content-center">
            <div class="card-head text-center">
                <h1>Welcome, <%=user.Username%>
                </h1>
            </div>
            <div class="col-sm-2">
                <div class="form-control">
                    <form action="/channel/new" method="POST">
                        <input class="input-group" required placeholder="Channel Name" type="text" id="ChannelID"
                            name="ChannelID"><br>
                        <button class="input-group btn btn-primary mt-2">Create New Channel</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <% user.Channels.forEach (channel=>{ %>

                <div class=" my-2 mx-2 col-3 col-8-mobile">
                    <div class="card">
                        <div class="card-head text-center">
                            <h1>
                                <%=channel%>
                            </h1>
                        </div>
                        <div class="card-body text-center">
                            <a href="/channel/<%=channel%>"><button class="btn btn-info">View
                                    Channel</button></a>
                        </div>
                    </div>
                </div>

                <% }) %>
        </div>

    </div>
</body>

</html>